<div class="container">
    <div id="container">

    <% @user.find_liked_items.each do |widget| %>

       <% if widget.media == "photo" %>
            
        <div class="item">

            <%= link_to widget_path(widget) do %>



            <div class="img-container">
                <div class="open-icon png-icon">
                    <img src="<%= image_path "open.png" %>">
                </div>
                <div class="image" style="background-image:url('<%= widget.content %>')"></div>
            </div>

            <div class="widget-info">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12">               
                            <h3><%= widget.title %></h3>
                            <p><%= widget.description %></p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="widget-user-avatar">
                                <div class="avatar" style="background-image:url('<%= widget.user.avatar %>')"></div>
                            </div>
                            <h2><a href="/users/<%= widget.user.id %>"><%= widget.username %></a></h2>
                        </div>
                    </div>
                </div>
            </div>

           

            <% end %>

            <div class="widget-stats">
                <div class="container-fluid">

                    <div class="row widget-post-stats">
                        <div class="col-md-4 text-center">
                            <% if current_user && current_user.voted_for?(widget) %>
                                <p class="heart-icon-liked"><span class="icon">n</span><%= widget.get_likes.size %></p>
                            <% else %>
                                <p class="heart-icon"><span class="icon">n</span><%= widget.get_likes.size %></p>
                            <% end %>
                        </div>

                        <div class="col-sm-4 text-center">
                            <p class="comment-icon"><span class="icon">k</span><%= widget.impressionist_count %></p>
                        </div>

                        <div class="col-sm-4 text-center">
                            <p class="comment-icon"><span class="icon">k</span>Share</p>
                        </div>
                    </div>

                </div>
            </div>


           




        </div>

        <% end %>

        <% if widget.media == "video" %>
