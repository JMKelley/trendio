<% title "Account Settings" %>
<div class="container-fluid register">

  <div class="row">
    <div class="col-md-12">
      <h1>Account Settings</h1>
    </div>
  </div>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put, :multipart => true}) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col-md-12">
      <img class="settings-avatar" src="<%= current_user.avatar.url %>"/>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= f.email_field :email, :autofocus => true, placeholder: "Email Address" %>

      <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, :autocomplete => "off", placeholder: "New Password" %>
      <%= f.password_field :password_confirmation, placeholder: "Repeat New Password" %>

    </div>
  </div>

  <div class="row">
    <div class="col-md-12 sign-up-button">
      <%= f.submit "Update" %>
    </div>
  </div>




<% end %>

  <div class="row close-account">
    <div class="col-md-12 text-center">
      <h4>Unhappy?</h4>
      <div class="cancel-account-button">
        <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>
      </div>
    </div>
  </div>

</div>
