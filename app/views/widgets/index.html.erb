<div class="container-fluid">

    <!-- START OF INTRODUCTION BOX -->

    <div class="row introduction">
        <div class='container'>
        <div class="col-md-12">
            <div class="row">

                <div class="col-md-6">
                    <h1>Stay Fresh.</h1>
                    <p>Get up-to-date with all the latest trends from around the world, get ready to replace your favourite website.</p>
                </div>

                <div class="col-md-2 col-md-offset-2">
                    <%= link_to "Sign up for Trendly", new_user_registration_path, class: "btn btn-primary"  %>">
                </div>

                <div id="mascot">
                    <img src="<%= image_path "mascot.svg" %>" alt="Moonie is Watching you!">
                </div>

                <div id="mascot-icons">
                    <img src="<%= image_path "mascot-icons.svg" %>" alt="Moonie is Watching you!">
                </div>


            </div>
        </div>
        </div>
    </div>

</div>
<!-- END OF INTRODUCTION BOX -->

<div class="container">
<!-- START OF SORTING BAR -->
<div class="row sorting">
    <div class="col-md-12">
        <ul class="clearfix">
            <li>
                <a href="#" class="trending"><span class="icon">l</span>Top Trending</a>
            </li>
            <li>
                <a href="#" class="commented"><span class="icon">p</span>Most Commented</a>
            </li>
            <li>
                <a href="#" class="editor"><span class="icon">n</span>Editor's Choice</a>
            </li>
            <li>
                <a href="#" class="random"><span class="icon">v</span>Random</a>
            </li>
        </ul>
    </div>
</div>

    <div id="grid">
    <% @widgets.each do |widget| %>


        <% if widget.source == "youtube" %>
            
        <div class="item">

            <%= link_to widget_path(widget) do %>

                <img src="http://img.youtube.com/vi/<%= widget.ident %>/hqdefault.jpg">

            <% end %>

                <div class="information">
                    <div class="vert">
                        <div class="inner">
                            <h4><%= widget.title %></h4>
                            <p><%= widget.source %></p>
                        </div>
                    </div>
                </div>
            

            <div class="social-links">
                <a data-toggle="tooltip" data-placement="bottom" title="Add to bucket" class="btn btn-social btn-bucket"><span class="icon">a</span></a>
                <a class="btn btn-social btn-share"><span class="icon">+</span></a>
            </div>

            <div class="overlay">
            </div>

        </div>

        <% end %>

        <% if widget.source == "imgur" %>

        <div class="item">
            <%= link_to widget_path(widget) do %>
                <img data-original="<%= widget.url %>" class="lazy">
            <% end %>

                <div class="information">
                    <div class="vert">
                        <div class="inner">
                            <h4><%= widget.title %></h4>
                            <p><%= widget.source %></p>
                        </div>
                    </div>
                </div>
            

            <div class="social-links">
                <a data-toggle="tooltip" data-placement="bottom" title="Add to bucket" class="btn btn-social btn-bucket"><span class="icon">a</span></a>
                <a class="btn btn-social btn-share"><span class="icon">+</span></a>
            </div>

            <div class="overlay">
            </div>
        </div>

        <% end %>



    <% end %>



    </div>
</div>

    <div class="pages">
        <div class="col-md-12">
            <%= will_paginate @widgets, :page_links => false %>
        </div>
    </div>
    
<br />

<script>
    $("#grid").gridalicious({
      gutter: 10,
      width: 250,
      animate: true,
      animationOptions: {
        queue: true,
        speed: 200,
        duration: 300,
        effect: 'fadeInOnAppear',
      }
    });
</script>


