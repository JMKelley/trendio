<div class="container-fluid">

    <!-- START OF INTRODUCTION BOX -->
<% if user_signed_in? %>

<% else %>
    <div class="row introduction">
        <div class='container'>
        <div class="col-md-12">
            <div class="row">

                <div class="col-md-6 col-md-offset-3 text-center">
                    <h1>Welcome to your New Home</h1>
                    <p>Get up-to-date with all the latest trends from around the world, get ready to replace your favourite website.</p>
                    <%= link_to "Sign up for Trendly", new_user_registration_path, class: "btn btn-primary"  %>
                </div>


            </div>
        </div>
        </div>
    </div>
<% end %>
</div>

<!-- END OF INTRODUCTION BOX -->

<div class="container-fluid sorting">
    <!-- START OF SORTING BAR -->
    <div class="row">
        <div class="container">
            <div class="col-md-12">
                <ul class="clearfix">
                    <li>
                        <a href="#" class="editor"><span class="icon">n</span>Most Popular</a>
                    </li>
                    <li>
                        <a href="#" class="commented"><span class="icon">p</span>Most Commented</a>
                    </li>
                    <li>
                        <a href="#" class="trending"><span class="icon">o</span>Newest</a>
                    </li>
                    
                    <li>
                        <%= link_to "New Article", new_widget_path, class: "btn btn-new"  %>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div id="grid">
    <% @widgets.each do |widget| %>


        <% if widget.media == "photo" %>
            
        <div class="item">

            <div class="widget-user">
                <div class="container-fluid">
                    <div class="row">

                        <div class="col-sm-2">
                            <div class="widget-user-avatar">
                                <div class="avatar" style="background-image:url('<%= widget.user.avatar %>')"></div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <h2><%= widget.username %></h2>
                            <p class="rank">
                                <%= widget.user.points %>
                            </p>
                        </div>

                        <div class="col-sm-4">
                            <p class="time">12mins</p>
                        </div>

                         

                    </div>
                </div>
            </div>

            <%= link_to widget_path(widget) do %>


            <div class="img-container">
                <img src="<%= widget.thumb %>">
            </div>

            <h3><%= widget.title %></h3>

            <% end %>

            <div class="widget-info">
                <div class="container-fluid">
                    <div class="row">

                        <div class="col-md-3">
                            <div class="widget-post-source">
                            </div>
                        </div>

                        <div class="col-md-9">
                            <div class="widget-post-stats">
                                <p class="comment-icon"><span class="icon">p</span>562</p>
                                <p class="heart-icon"><span class="icon">n</span>1,262</p>
                            </div>

                        </div>

                    </div>
                </div>
            </div>


           




        </div>

        <% end %>

