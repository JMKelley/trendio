  
<div class="container inpost-header">
  <div class="container">
    <div class="row widget-name">

      <div class="col-md-8">
        <div class="in-post-avatar" style="background-image:url('<%= @widget.user.avatar %>')"></div><h2><%= @widget.title %></h2>
        <p><a href="/users/<%= @widget.user.id %>"><%= @widget.username %></a></p>
      </div>

      <div class="col-md-4 function-buttons">

        <% if current_user && current_user.voted_for?(@widget) %>
              <%= link_to ("<span class='icon'>n</span> Liked").html_safe, unlike_widget_path(@widget), class: "btn btn-loved", method: :put %>
        <% else %>
              <%= link_to ("<span class='icon'>n</span> Like").html_safe, like_widget_path(@widget), class: "btn btn-love", method: :put %>  
        <% end %>

        <%= link_to ("<span class='icon'>&#xe011;</span>Source").html_safe, @widget.url, class: "btn btn-comment"  %>
        <a href="#" class="btn btn-twitter"><span class="icon">+</span>Share</a>
      </div>

    </div>
  </div>



  <div class="row">

  <% if @widget.media == "photo" %>
    <div class="col-md-8 text-center">
            <img src="<%= @widget.content %>" id="show-image" class="image"/>
    </div>
  <% end %>

  <% if @widget.media == "video" %>
    <div class="col-md-8 content text-center">
            <%= raw @widget.content %>
    </div>
  <% end %>

  <% if @widget.media == "rich" %>
    <div class="col-md-8 content text-center">
            <%= raw @widget.content %>
    </div>
  <% end %>

  <% if @widget.media == "link" %>
    <div class="col-md-8 content text-center">
         <img src="<%= @widget.thumb %>" id="show-image" class="image"/>
    </div>
  <% end %>

  <div class="col-md-4 prev-posts">

    <% @widget.prev_six.each do |related| %>

      <%= link_to related do %>
        <div style="background-image:url('<%= related.thumb %>')"></div>
      <% end %>

    <% end %>

  </div>



  </div>


  </div>
</div>




<p id="notice"><%= notice %></p>






<% if can? :update, @widget %>
    <%= link_to "Edit", edit_widget_path(@widget) %> |
<% end %>

