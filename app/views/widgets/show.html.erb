<div class="container">

  <div class="row widget-name">
    <div class="col-md-9">
      <h2><%= @widget.title %></h2>
      <p>Source | Comments | 20 Minutes Ago</p>
    </div>
    <div class="col-md-3 social-buttons">
      <%= link_to "Prev", @widget.prev, class: "btn btn-prev"  %>">
      <%= link_to "Next", @widget.next, class: "btn btn-next"  %>">
    </div>
  </div>

  <div class="row">
    <div class="col-md-9 content text-center">

          <% if @widget.source == "youtube" %>
          <iframe width="100%" height="515" src="//www.youtube.com/embed/<%= @widget.ident %>?rel=0&amp;autohide=1&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>

          <% elsif @widget.source == "imgur" %>
            <img src="<%= @widget.url %>" id="show-image" class="image"/>


          <% end %>

    </div>

    <div class="col-md-3 function-buttons">
      <a href="#" class="btn btn-bucket"><span class="icon">a</span>Save to Bucket</a>
      <a href="#" class="btn btn-facebook"><span class="icon">a</span>Share on Facebook</a>
      <a href="#" class="btn btn-twitter"><span class="icon">a</span>Share on Twitter</a>
    </div>

  </div>

</div>

<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>

</p>

<p>
  <b>Type:</b>
  <%= @widget.media %>
</p>

<p>
  <b>Content:</b>
  <%= @widget.content %>
</p>

<p>
  <b>Url:</b>
  <%= @widget.url %>
</p>

<p>
  <b>Source:</b>
  <%= @widget.source %>
</p>

<p>
  <b>Ident:</b>
</p>




<a class="btn btn-primary btn-bucket" data-id="<%= @widget.id %>" href="<%= buckets_path %>">Bucket</a>

